= form_for @shorturl do |f|
  -if @shorturl.errors.any?
    #error_explanation
      %h2= "#{pluralize(@shorturl.errors.count, "error")} prohibited this shorturl from being saved:"
      %ul
        - @shorturl.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :url
    = f.text_field :url
  .actions
    = f.submit 'Save'
