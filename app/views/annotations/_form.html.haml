= form_for @annotation do |f|
  -if @annotation.errors.any?
    #error_explanation
      %h2= "#{pluralize(@annotation.errors.count, "error")} prohibited this annotation from being saved:"
      %ul
        - @annotation.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :x
    = f.text_field :x
  .field
    = f.label :y
    = f.text_field :y
  .field
    = f.label :body
    = f.text_area :body
  .field
    = f.label :order_on_page
    = f.text_field :order_on_page
  .actions
    = f.submit 'Save'
